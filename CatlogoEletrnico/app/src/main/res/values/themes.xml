<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CatálogoEletrónico.Light.Drawer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBlueDark</item>
        <item name="colorPrimaryVariant">@color/colorBlueDark</item>
        <item name="android:windowBackground">@color/colorBlue</item>
        <item name="android:navigationBarColor">@color/colorBlueDark</item>

        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorGray</item>
        <item name="android:editTextColor">@color/colorGray</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CatálogoEletrónico.Light.NoDrawer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlueDark</item>
        <item name="colorPrimaryVariant">@color/colorBlueDark</item>
        <item name="android:windowBackground">@color/colorBlue</item>
        <item name="android:navigationBarColor">@color/colorBlueDark</item>

        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorGray</item>
        <item name="android:editTextColor">@color/colorGray</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Button Theme. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CatálogoEletrónico.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlueDark</item>
        <item name="colorPrimaryVariant">@color/colorBlueDark</item>
        <item name="android:windowBackground">@color/colorBlue</item>
        <item name="android:navigationBarColor">@color/colorBlueDark</item>

        <item name="android:textColor">@color/colorGray</item>
        <item name="android:editTextColor">@color/colorGray</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorGray</item>
        <item name="buttonStyle">@style/ButtonColor</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


    <style name="ButtonColor" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorBlueLight</item>
        <item name="android:textColor">@color/colorBlueDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorGray</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorBlueDark</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textColorPrimary">@color/colorGray</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/colorGray</item>
    </style>

</resources>