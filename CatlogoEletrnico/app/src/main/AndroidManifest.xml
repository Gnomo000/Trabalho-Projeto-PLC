<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ipbeja.catlogoeletrnico">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_background_blue_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_background_blue_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CatálogoEletrónico.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.HistoryDetailsActivity"
            android:label="Nome Livro"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CatálogoEletrónico.Light.Drawer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.HistoryActivity" />
        </activity>
        <activity
            android:name=".view.BookDetailsActivity"
            android:label="Nome Livro"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CatálogoEletrónico.Light.Drawer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.BooksActivity" />
        </activity>
        <activity
            android:name=".view.BooksActivity"
            android:label="Livros"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CatálogoEletrónico.Light.NoDrawer" />
        <activity
            android:name=".view.HistoryActivity"
            android:label="Histórico"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CatálogoEletrónico.Light.NoDrawer" />
        <activity
            android:name=".view.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CatálogoEletrónico.Light.NoDrawer" />
        <activity
            android:name=".view.RegisterActivity"
            android:label="@string/app_register"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CatálogoEletrónico.Light.Drawer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>