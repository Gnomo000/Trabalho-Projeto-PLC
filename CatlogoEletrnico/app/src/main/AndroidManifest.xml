<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ipbeja.catlogoeletrnico">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon_trabalho_simples"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon_trabalho_simples"
        android:supportsRtl="true"
        android:theme="@style/Theme.CatálogoEletrónico.Light.NoActionBar">
        <activity
            android:name=".BooksActivity"
            android:screenOrientation="portrait"
            android:label="Livros"
            android:theme="@style/Theme.CatálogoEletrónico.Light.Default">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"/>
            ></activity>
        <activity
            android:name=".HistoryActivity"
            android:screenOrientation="portrait"
            android:label="Histórico"
            android:theme="@style/Theme.CatálogoEletrónico.Light.Default">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY" />
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CatálogoEletrónico.Light.Default.Two"></activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_register"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CatálogoEletrónico.Light.Default">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>