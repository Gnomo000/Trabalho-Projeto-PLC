<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textViewNameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Nome Próprio:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextNameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewNameRegister"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameRegister" />

    <TextView
        android:id="@+id/textViewDateRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Data de Nascimento"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextTextNameRegister"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNameRegister" />

    <EditText
        android:id="@+id/editTextDateRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Data de nascimento "
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/textViewDateRegister"
        app:layout_constraintTop_toBottomOf="@+id/textViewDateRegister" />

    <TextView
        android:id="@+id/textViewEmailRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextDateRegister"
        app:layout_constraintTop_toBottomOf="@+id/editTextDateRegister" />

    <EditText
        android:id="@+id/editTextTextEmailRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/textViewEmailRegister"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailRegister" />

    <TextView
        android:id="@+id/textViewPhoneRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Telemvel"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextTextEmailRegister"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailRegister" />

    <EditText
        android:id="@+id/editTextPhoneRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Telemóvel"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/textViewPhoneRegister"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhoneRegister" />

    <TextView
        android:id="@+id/textViewUsernameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nome de Utilizador"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextPhoneRegister"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhoneRegister" />

    <EditText
        android:id="@+id/editTextTextUsernameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Nome de Utilzador"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewUsernameRegister"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsernameRegister" />

    <TextView
        android:id="@+id/textViewPasswordRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Senha"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextTextUsernameRegister"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextUsernameRegister" />

    <EditText
        android:id="@+id/editTextTextPasswordRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/textViewPasswordRegister"
        app:layout_constraintTop_toBottomOf="@+id/textViewPasswordRegister" />

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#49688E"
        android:onClick="goToMainPage"
        android:text="Registrar"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPasswordRegister"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPasswordRegister" />

</androidx.constraintlayout.widget.ConstraintLayout>