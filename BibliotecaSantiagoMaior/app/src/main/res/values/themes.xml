<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.BibliotecaSantiagoMaior.Light.Default" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFD046</item>
        <item name="colorPrimaryVariant">#FFD046</item>
        <item name="android:windowBackground">#769cd5</item>
        <item name="android:navigationBarColor">#FFD046</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:textColor">#474747</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <!-- Button Theme. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BibliotecaSantiagoMaior.Light.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFD046</item>
        <item name="colorPrimaryVariant">#FFD046</item>
        <item name="android:windowBackground">#769cd5</item>
        <item name="android:navigationBarColor">#FFD046</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:textColor">#474747</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonColor" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">#FFD046</item>
        <item name="android:textColor">#474747</item>
    </style>

    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:backgroundTint">#474747</item>
        <item name="android:textColor">#474747</item>
    </style>

</resources>